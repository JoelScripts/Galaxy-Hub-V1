local running = false

local Toggle = Tab1:CreateToggle({
   Name = "Toggle Example",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
       running = Value -- Update the running state

       if running then
           -- Start a new task for firing the event
           task.spawn(function()
               while running do
                   local args = { "Blueberry" }
                   game:GetService("ReplicatedStorage"):WaitForChild("GameEvents"):WaitForChild("BuySeedStock"):FireServer(unpack(args))

                   task.wait(1) -- Prevent excessive server requests
               end
           end)
       end
   end,
})
